extends layout

block content
  h1= title
  table
    tr
      th Name
      th Price (BTC)
      th ROI
      th Volume (BTC)
      th Node Count
      th Node Worth (BTC)
    each coin in data
      tr
        td(class='name')= coin.name
        td= coin.price
        td= coin.roi + '%'
        td= coin.volume
        td= coin.nodes
        td= coin.worth
  p
    a(href='/refresh/') Refresh Data
