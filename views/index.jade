extends layout

block content
  h1= title
  if refresh
    p= 'Data was refreshed on: ' + refresh
  p
    a(href='#' onclick='copyTable("coinTable");') Copy Table
  table#coinTable
    tr
      th Name
      th Price (BTC)
      th ROI
      th Volume (BTC)
      th Node Count
      th Node Worth (BTC)
      th Volume/Worth Ratio
      th Daily Payout
    each coin in data
      tr
        td.name= coin.name
        td.numbers= coin.price
        td.numbers= coin.roi + '%'
        td.numbers= coin.volume
        td.numbers= coin.nodes
        td.numbers= coin.worth
        td.numbers= coin.ratio
        td.numbers= coin.payout
